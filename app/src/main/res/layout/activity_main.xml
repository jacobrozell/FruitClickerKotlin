<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/apple0"
            android:id="@+id/appleView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="78dp" android:layout_marginTop="188dp"
            app:layout_constraintTop_toBottomOf="@+id/applesEatenCount"/>
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/applesEatenCount"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/appleLabel" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="Apples Eaten:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appleLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"/>
    <TextView
            android:text="Clicks:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clickView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/appleLabel"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clickCountView" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/clickView" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/appleLabel"/>
</android.support.constraint.ConstraintLayout>